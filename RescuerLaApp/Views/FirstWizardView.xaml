<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RescuerLaApp.Views.FirstWizardView">
    <StackPanel>
        <Border Classes="Card">
            <StackPanel>
                <TextBlock Classes="Heading" Text="Step 1: Select input data" />
                <TextBlock Margin="0 5"
                           TextWrapping="Wrap"
                           Text="To begin, please select the input data for recognition by clicking the 'Open photos' button or by writing the full path to the input folder in the text box below."
                           ToolTip.Tip="Select input data" />
            </StackPanel>
        </Border>
        <Border Classes="Card">
            <StackPanel>
                <TextBox UseFloatingWatermark="True"
                         Watermark="Enter input path here."
                         Text="{Binding InputPath, Mode=TwoWay}" />
                <Button Content="Open photos"
                        Command="{Binding OpenPhotos}"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>